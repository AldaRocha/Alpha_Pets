<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9E6F3"
    tools:context=".Registro">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/classycoiffeurbold"
            android:text="Registro"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtNombreDue単o"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/classycoiffeurregular"
            android:hint="Nombre del due単o:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtRegistrarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/classycoiffeurregular"
            android:hint="Nuevo usuario:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtRegistrarContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/classycoiffeurregular"
            android:hint="Nueva Contrase単a:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtNombreMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/classycoiffeurregular"
            android:hint="Nombre de la mascota:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtEdadMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/classycoiffeurregular"
            android:hint="Edad de la mascota:"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtRazaMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/classycoiffeurregular"
            android:hint="Raza de la mascota:"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/classycoiffeurregular"
            android:text="Tama単o de la mascota:"
            android:textAlignment="center"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/radioChico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/classycoiffeurregular"
                android:text="Chico" />

            <RadioButton
                android:id="@+id/radioMediano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/classycoiffeurregular"
                android:text="Mediano" />

            <RadioButton
                android:id="@+id/radioGrande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/classycoiffeurregular"
                android:text="Grande" />
        </RadioGroup>

        <Button
            android:id="@+id/btnRegistroIngreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/classycoiffeurbold"
            android:onClick="registrarDatos"
            android:text="Registrarse"
            android:textSize="16sp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/classycoiffeurbold"
            android:onClick="regresar"
            android:text="Regresar"
            android:textSize="16sp"
            app:cornerRadius="10dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>